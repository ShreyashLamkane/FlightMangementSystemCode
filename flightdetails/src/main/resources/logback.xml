<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="myConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1}): %msg%n%throwable
            </Pattern>
        </encoder>
    </appender>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/myapp.log</file> <!-- Specify the log file path -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/myapp-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize> <!-- Set the maximum size of each log file -->
            <maxHistory>30</maxHistory> <!-- Set the maximum number of archived log files -->
            <totalSizeCap>1GB</totalSizeCap> <!-- Set the total size cap for all archived files -->
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
             <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        
    </appender>

    <root level="info">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="myConsoleAppender" />
    </root>

    <!-- <logger name="com.flight" level="trace" additivity="false">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="myConsoleAppender" />
    </logger> -->
</configuration>
